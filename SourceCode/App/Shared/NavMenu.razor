            <NavLink class="nav-link" href="Country/Statistics">
                <span class="fa fa-flag" aria-hidden="true" />@Localizer["Statistics"]
            </NavLink>
        </li>
        <div style="color: white" class="nav-item px-3">@Localizer["ExternalLinks"]:</div>
        <li class="nav-item px-3">
            <a class="nav-link" href="https://wagoncardapp.azurewebsites.net/" target="_blank">
                <span class="fa fa-train" aria-hidden="true" />@Localizer["LokAndWagonCards"]

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ReleaseNotes">
                <span class="fa fa-info-circle" aria-hidden="true" />Release Notes
            </NavLink>
        </li>
        <li class="nav-item px-3" style="border-top: solid 1px white; border-bottom: solid 1px white">
            <NavLink class="nav-link" href="Meetings/Index">
                <span class="@FontAwesome.Meeting" aria-hidden="true" />@Localizer["Meetings"]
            </NavLink>
        </li>

        <AuthorizeView Policy="@AppPolicyNames.User">
            <li class="nav-item px-3" >

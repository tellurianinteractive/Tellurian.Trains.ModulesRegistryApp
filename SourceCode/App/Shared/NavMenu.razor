                </NavLink>
            </li>
            <li class="nav-item px-3" style="border-bottom: solid 1px white">
                <NavLink class="nav-link" href=@RegionsHref>
                    <span class="fa fa-shield-alt" aria-hidden="true" />@Localizer["Regions"]
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="@AppPolicyNames.Admin">
            <li class="nav-item px-3" style="border-bottom: solid 1px white">
